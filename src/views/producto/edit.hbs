<div class="container p-4">
   <form class="row g-3"  action="/producto/edit/{{producto.idproducto}}" method="POST">
      <div class="col-4" >
          <div class="form-floating mb-3">
            <input name="nombreProducto" type="text" class="form-control" id="floatingInput" value="{{producto.nombreProducto}}" >
            <label for="floatingInput">Nombre del producto</label>
          </div>
      </div>
        <div class="col-3">
          <div class="form-floating mb-3">
            <label >Tipo de producto: </label>&nbsp;&nbsp;
            <select name="tipoproducto" >
              <option value="{{producto.tipoproducto}}" hidden="hidden" selected="selected">{{producto.tipoproducto}}</option>
              <option value="Bien">Bien</option>
              <option value="Servicio">Servicio</option>
          </select>

          </div>
      </div>
         <div class="col-3">
          <div class="form-floating mb-3">
            <label>Iva: </label>&nbsp;&nbsp;
            <select name="IvaProducto">
              <option value="{{producto.IvaProducto}}" hidden="hidden" selected="selected">{{producto.IvaProducto}}</option>
              <option value="12">12%</option>
              <option value="0">0%</option>
              <option value="Excento">Excento de Iva</option>
          </select>

          </div>
      </div>
        <div class="col-5">
          <div class="form-floating mb-3">
            <input name="precioProducto" type="text" class="form-control" id="floatingInput" placeholder="0.00$" value="{{producto.precioProducto}}">
            <label for="floatingInput">Costo del Producto</label>
          </div>
      </div>
      <div class="col-3">
          <div class="form-floating mb-3">
            <input name="StockProducto" type="text" class="form-control" id="floatingInput" placeholder="0 " value="{{producto.StockProducto}}">
            <label for="floatingInput">Stock Inicial</label>
          </div>
      </div>
    <div class="col-6">
          <div class="form-floating mb-3">
            <input name="DetalleProducto" type="text" class="form-control" id="floatingInput" style="height: 80px;" value="{{producto.DetalleProducto}}">
            <label for="floatingInput">Detalle</label>
          </div>
      </div>
</div>
 <div class="container p-4">
        <button class="btn btn-success btn-block">
            Actualizar
        </button>
      </div>
</form>