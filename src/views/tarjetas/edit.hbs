    <div class="card">
        <div class="card-body">
            <form action="/tarjetas/edit/{{tarjetas.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="nombreTarjeta" class="form-control" placeholder="nombreTarjeta" value="{{tarjetas.nombreTarjeta}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="valor" class="form-control" placeholder="valor" value="{{tarjetas.valor}}">
                </div>
                <div class="form-group">
                    <textarea name="descripcion" rows="2" class="form-control" placeholder="descripcion">{{tarjetas.descripcion}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Save
                    </button>
							  
						   
                </div>
            </form>
        </div>

    </div>
</div>