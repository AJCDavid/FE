<div class="container p-4">
    <div class="row">
        {{#each tarjetas}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    
                        <h3 class="card-nombreTarjeta text-uppercase">
                            {{nombreTarjeta}}
                        </h3>
                    
                    <p class="m-2">{{descripcion}}</p>
									 
							
                    <p class="text-muted">
                        {{timeago fecha}}
                    </p>
                    <a class="btn btn-danger" href="/tarjetas/delete/{{id}}">
                        Delete tarjetas
                    </a>
                    <a class="btn btn-secondary" href="/tarjetas/edit/{{id}}">
                        Edit
                    </a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not tarjetas saved yet.</p>
                <a href="/tarjetas/add">Create One!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>