                        <option value="No">No</option>
                    </select>
                   </div>
                     </div>
                    </div>
                </div><br>
                <div class="col-12">
                    <div class="row">
                     <div class="col-4">
                    <div class="form-group">
                   <label for="">Agente de retención Nro de Resolución: </label>
                    <input name="numeroresolucion" type="text" class="form-control" >
                   </div>
                     </div>
                    </div>
                </div><br>
