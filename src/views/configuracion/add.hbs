              <div class="col-4">
               <form  action="/configuracion/add" method="POST">
                <div class="form-group">
                    <label for="">RUC: </label>
                    <input name="ruc" type="text" class="form-control">
                </div>
            </div>
            </div>
        </div>
        <div class="col-12">
            <div class="row"> 
                <div class="col-4">
                    <div class="form-group">
                   <label for="">Nombres Apellidos-Razón Social</label>
                    <input name="razonsocial" type="text" class="form-control" >
                   </div>
                </div>
                 <div class="col-4">
                    <div class="form-group">
                   <label for="">Nombre Comercial</label>
                    <input name="nombrecomercial" type="text" class="form-control" >
                   </div> 
                 </div>
            </div>
        </div>
                <div class="col-12">
                    <div class="row">
                     <div class="col-4">
                    <div class="form-group">
                   <label for="">Dirección Matriz: </label>
                    <input name="direccion" type="text" class="form-control" >
                   </div>
                     </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row">
                     <div class="col-4">
                    <div class="form-group">
                   <label for="">Codigo del establecimiento: </label>
                    <input name="codigoestabl" type="text" class="form-control" >
                   </div>
                     </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row">
                     <div class="col-4">
                    <div class="form-group">
                   <label>Obligado a llevar Contabilidad: </label>&nbsp;&nbsp;
                        <select name="contabilidad">
                        <option value="{{status}}" hidden="hidden" selected="selected">{{status}}</option>
                        <option value="Si">Si</option>
                        <option value="No">No</option>
                    </select>
                   </div>
                     </div>
                    </div>
                </div>
                 <div class="col-12">
                    <div class="row">
                     <div class="col-4">
                    <div class="form-group">
                   <label>Contribuyente Régimen de microempresas: </label>&nbsp;&nbsp;
                        <select name="contribuyenteMicro">
                        <option value="{{status}}" hidden="hidden" selected="selected">{{status}}</option>
