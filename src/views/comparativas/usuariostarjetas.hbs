<div class="container p-4">
    <div class="row">
        {{#each tarjetas}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                                        
                    <p class="m-2">{{nombreusuario}}</p>
                    <p class="m-2">{{nombretarjeta}}</p>
                    <p class="m-2">{{fecha}}</p>
									 
							
                    
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not tarjetas saved yet.</p>
                <a href="/tarjetas/add">Create One!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>