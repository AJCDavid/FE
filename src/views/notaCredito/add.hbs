<section id="search" class="search-wrap">
<form action="/notacredito/addNotaCredito" method="POST"></form>
  <h1>Ingrese un número de cédula:</h1>
  <form action="/notacredito/add/search" class="search-form">
    <i class="fas fa-search"></i>
    <input type="search" name="term" placeholder="Cedula">
    <input type="submit" value="Search">
  </form>
</section>
<div class="row">
  {{#each cliente}}
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        <form action="/notacredito/addNotaCredito" method="POST">
          <input name="idCliente" class="form-control" type="hidden" id="idCliente" disabled value="{{idCliente}}">
          <div class="form-group">
            <label>Nombre: </label>&nbsp;&nbsp;
            <input name="nombreCliente" type="text"  value="{{nombreCliente}}">
          </div>
          <div>
            <label>Apellido: </label>&nbsp;&nbsp;
            <input name="apellidoCliente" type="text" value="{{apellidoCliente}}">
          </div>
          <div>
            <label>Teléfono: </label>&nbsp;&nbsp;
            <input name="telefonoCliente" type="text"  value="{{telefonoCliente}}">
          </div>
          <div>
            <label>Cédula: </label>&nbsp;&nbsp;
            <input name="cedulaCliente" type="text"  value="{{cedulaCliente}}">
          </div>
          <div>
            <label>Email: </label>&nbsp;&nbsp;
            <input name="emailCliente" type="text"  value="{{emailCliente}}">
          </div>
          <div>
            <label>Dirección: </label>&nbsp;&nbsp;
            <input name="direccionCliente" type="text" value="{{direccionCliente}}">
          </div>
          <!--div class="form-group">
            <button class="btn btn-success btn-block">
              Save
            </button>
          </div-->
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="col-md-4 mx-auto">
    <div class="card card-body text-center">
      <p>There are not cliente saved yet.</p>
      <a href="/cliente/add">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>


<h1>Ingrese un producto:</h1>
<form action="/notacredito/add/searchProducto" class="search-form" id="formProducts">
  <i class="fas fa-search"></i>
  <input type="search" name="term" placeholder="Nombre producto">
  <input type="submit" value="Search">
</form>
</section>
<div class="row">
  {{#each producto}}
  <div class="col-md-3">
    <div class="card text-center">
      <div class="card-body">
        
        <div>
          <label>Nombre: </label>&nbsp;&nbsp;
          <input name="nombreProducto" type="text"  value="{{nombreProducto}}">

        </div>
        <div>
          <label>Tipo Producto: </label>&nbsp;&nbsp;
          <input name="tipoproducto" type="text"  value="{{tipoproducto}}">
        </div>
        <div>
          <label>Iva: </label>&nbsp;&nbsp;
          <input name="IvaProducto" type="text"  value="{{IvaProducto}}">
        </div>
        <div>
          <label>Precio: </label>&nbsp;&nbsp;
          <input name="precioProducto" type="text"  value="{{precioProducto}}">
        </div>
        <div>
          <label>Stock: </label>&nbsp;&nbsp;
          <input name="StockProducto" type="text"  value="{{StockProducto}}">
        </div>
        <div>
          <label>Detalle: </label>&nbsp;&nbsp;
          <input name="DetalleProducto" type="text"  value="{{DetalleProducto}}">
        </div>
        <div class="form-group">
            <button class="btn btn-success btn-block">
              Save
            </button>
          </div>
          
        
      </div>
    </div>
  </div>
  {{else}}
  <div class="col-md-4 mx-auto">
    <div class="card card-body text-center">
      <p>There are not cliente saved yet.</p>
      <a href="/cliente/add">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>
</form>

